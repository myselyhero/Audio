<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/main_permission_window">
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="权限授予"/>
    <TextView
        android:id="@+id/main_permission_window_desc"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="我们将申请你的录音权限及读写权限，以便在录音后保存到本地！"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/main_permission_window_cancel"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/main_permission_window_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="不同意"/>
        <TextView
            android:id="@+id/main_permission_window_agree"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/main_permission_window_agree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="同意"/>
    </LinearLayout>
</LinearLayout>